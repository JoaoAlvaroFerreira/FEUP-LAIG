<yas>

<scene root="scene" axis_length="1" />

<views default="view1">
  <perspective id="view1" near="0.1" far="500" angle="0.4">
    <from x="30" y="30" z="30"/>
    <to x="0" y="0" z="0"/>
  </perspective>
</views>

<ambient>
 <ambient r="0" g="0" b="0" a="0.1" />
 <background r="0" g="0" b="0" a="1" />
</ambient>

<lights>
  <omni id="luz1" enabled="1" >
    <location x="10" y="10" z="10" w="1" />
    <ambient r="0.5" g="0.5" b="0.5" a="1" />
    <diffuse r="2" g="2" b="2" a="1" />
    <specular r="1.5" g="1.5" b="1.5" a="1" />
  </omni>

  <omni id="luz_candeeiro" enabled="0" >
    <location x="3.4" y="4.4" z="5" w="1" />
    <ambient r="0.5" g="0.5" b="0.5" a="1" />
    <diffuse r="3" g="3" b="3" a="1" />
    <specular r="3" g="3" b="3" a="1" />
  </omni>
</lights>

