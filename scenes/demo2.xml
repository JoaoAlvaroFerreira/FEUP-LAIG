 <texture id="madeira" file="wood.png" />
 <texture id="madeira_escura" file="darkwood.png" />
 <texture id="teclado" file="key.png" />
</textures>

<materials>
  <material id="default_material" shininess = "500" >
    <emission r="0" g="0" b="0" a="0" />
    <ambient r="0.3" g="0.3" b="0.3" a="1" />
    <diffuse r="0.6" g="0.6" b="0.6" a="1" />
    <specular r="0.1" g="0.1" b="0.1" a="1" />
  </material>

  <material id="black" shininess = "10" >
    <emission r="0" g="0" b="0" a="0" />
    <ambient r="0.01" g="0.01" b="0.01" a="0.9" />
    <diffuse r="0.07" g="0.07" b="0.07" a="0.9" />
    <specular r="0.8" g="0.8" b="0.8" a="1" />
  </material>
</materials>

